{
  "include": [
    "src/**/*",
    "types/**/*","**/*.ts", "**/*.test.ts" 
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": [
      "jest",
      "node"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*",
        "types*"
      ]
    }
  }
}